<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net8.0-windows</TargetFramework>
		<UseWindowsForms>true</UseWindowsForms>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- One-file EXE -->
		<PublishSingleFile>true</PublishSingleFile>
		<SelfContained>true</SelfContained>
		<RuntimeIdentifier>win-x64</RuntimeIdentifier>
		<EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>
		<EnableWindowsTargeting>true</EnableWindowsTargeting>

		<AssemblyName>SpyMoney.SettingsInstaller</AssemblyName>
		<Company>SpyMoney</Company>
		<Product>SpyMoney Settings Installer</Product>

		<!-- Optional: set an icon file in this project folder -->
		<!-- <ApplicationIcon>SpyMoney.ico</ApplicationIcon> -->
	</PropertyGroup>

	<!-- Embed the entire Settings tree; resource names start with "Settings/..." -->
	<ItemGroup>
		<EmbeddedResource Include="Settings\**\*.*">
			<LogicalName>Settings/%(RecursiveDir)%(Filename)%(Extension)</LogicalName>
		</EmbeddedResource>
	</ItemGroup>

</Project>
